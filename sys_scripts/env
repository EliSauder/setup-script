#!/bin/bash

find "$SCRIPT_DIRECTORY/user_scripts/" \( -name "*_env_pre" \
    -and -not -name "*zsh*" -and -not -name "*bash*" \
    -and -not -name "*csh*" -and -not -name "*fish*" \)  \
    | while read -r file; do
        source "$file"
    done

find "$SCRIPT_DIRECTORY/user_scripts/" \( -name "*_env" \
    -and -not -name "*zsh*" -and -not -name "*bash*" \
    -and -not -name "*csh*" -and -not -name "*fish*" \)  \
    | while read -r file; do
        source "$file"
    done

find "$SCRIPT_DIRECTORY/user_scripts/" \( -name "*_env_post" \
    -and -not -name "*zsh*" -and -not -name "*bash*" \
    -and -not -name "*csh*" -and -not -name "*fish*" \)  \
    | while read -r file; do
        source "$file"
    done
